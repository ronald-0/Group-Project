@model IEnumerable<CybProjWeb.Entities.User>
@{
    ViewData["Title"] = "User";
}


<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Users</h4>
        </div>
        <div class="col-5 align-self-center">
            <div class="customize-input float-right">
                <a asp-controller="User" asp-action="Create" class="btn btn-rounded btn-info">Setup User Profile</a>
            </div>
        </div><br />
        <div class="table-responsive">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">FirstName</th>
                        <th scope="col">LastName</th>
                        <th scope="col">Email</th>
                        <th scope="col">Country</th>
                        <th scope="col">State</th>
                        <th scope="col">LGA</th>
                        <th scope="col">Department</th>
                        <th scope="col">Grade</th>
                        <th scope="col">Basic Salary</th>
                        <th scope="col">Gross Salary</th>
                        <th scope="col">Net Salary</th>

                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                    <tr>
                        <td scope="row">@u.Id</td>
                        <td>@u.FirstName</td>
                        <td>@u.LastName</td>
                        <td>@u.Account.Email</td>
                        <td>@u.Country</td>
                        <td>@u.State.Name</td>
                        <td>@u.LGA.Name</td>
                        <td>@u.Department.DeptName</td>
                        <td>@u.Grade.GradeName</td>
                        <td>@u.BasicSalary</td>
                        <td>@u.GrossSalary</td>
                        <td>@u.NetSalary</td>
                        <td>
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@u.Id" class="sidebar-link"
                               aria-expanded="false">
                                <i class="fas fa-edit"></i><span class="hide-menu">
                                </span>
                            </a>
                        </td>
                        <td>
                            <a asp-controller="User" onclick="return confirm('Are you sure you want to delete This record?')" asp-action="Delete" asp-route-id="@u.Id" class="sidebar-link"
                               aria-expanded="false">
                                <i class="fas fa-trash-alt"></i><span class="hide-menu">
                                </span>
                            </a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
