<!-- PAGE CONTAINER-->
<div class="page-container">
    <!-- Basic Tables start -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Salary</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body">
                        <div class="col-md-12 col-12 align-self-center">

                            <a asp-controller="Salary" asp-action="Create" class="btn float-right hidden-sm-down btn-success"><i class="mdi mdi-plus-circle"></i>New Department</a>
                        </div>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>GradeId</th>
                                        <th>PayItem</th>
                                        <th>PayItemType</th>
                                        <th>Amount</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var salary in Model)
                                    {
                                    <tr>
                                        <td scope="row">@salary.Id</td>
                                        <td>@salary.Grade.GradeName</td>
                                        <td>@salary.PayItem</td>
                                        <td>@salary.PayItemType</td>
                                        <td>@salary.Amount</td>
                                        <td><a class="fa fa-edit" asp-action="Edit" asp-route-id="@salary.Id" aria-hidden="false"></a></td>
                                        <td><a class="feather-icon deleted" asp-action="Delete" asp-route-id="@salary.Id" aria-hidden="false"></a></td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
