@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<div class="col-sm-12 col-md-6 col-lg-4">
    <form method="post">
        <div class="form-group">
            <input asp-for="Id" disabled class="form-control" />
        </div><br />
        <div class="form-group">
            <input asp-for="Rolename" disabled class="form-control" />
            <span asp-validation-for="Rolename"></span>
        </div><br />
        <div asp-validation-summary="All"></div>
        <!--<div class="form-group">
        <button type="submit" class="btn btn-rounded btn-primary">Update</button>
        <a asp-action="ListRoles" class="btn btn-rounded btn-danger">Cancel</a>
    </div>-->

        <div class="card">
            <div class="card-header">
                <h3>Users in this role</h3>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h5 class="card-title">@user</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at the moment.</h5>
                }
            </div>
        </div>
        <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-rounded btn-info">Add/Remove Users to Role</a><br/><br />
        <a asp-controller="Administration" asp-action="ListRoles" class="btn btn-rounded btn-danger">Go Back</a>
    </form>
    
</div>